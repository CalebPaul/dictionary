<h1>Add a definition to $word.getTerm()</h1>

<form action="/definitions" method="post">
  <input id="categoryId" name="categoryId" type="hidden" value="$category.getId()">

  <div class="form-group">
    <label for="meaning">Description</label>
    <input id="meaning" name="meaning" type="text" class="form-control">
  </div>

  <button type="submit" class="btn btn-success">Add Task</button>
</form>
